{% extends 'base.html.twig' %}

{% block body %}
<!-- Page Content -->
<div class="container">
    <div class="row">
        <!-- Blog Entries Column -->
        <div class="col-md-8">
            <h1 class="my-4">BEST BULLSHIT.
                <small>Ever...</small>
            </h1>
            {% for article in articles|reverse %}
            <!-- Blog Post -->
            <div class="card mb-4">
                <img class="card-img-top card-post-img" src="{{article.picture}}" alt="{{article.title}} image">
                <div class="card-body">
                    <h2 class="card-title">{{article.title}}</h2>
                    <p class="card-text">{{article.resume}}</p>
                    <a href="/read/{{article.id}}" class="btn btn-outline-danger">Read More &rarr;</a>
                </div>
                <div class="card-footer text-muted">
                    <p>
                        <small>
                            {% for tag in article.tags %}
                            <a href="/tag/{{tag.id}}">#{{tag.name}}</a> -
                            {% endfor %}
                        </small>
                    </p>
                    - <a href="/category/{{article.category.id}}">{{article.category}}</a> - <br>
                    <span class="float-right">Posted on {{article.createdAt|date('d/m/Y')}}</span>
                </div>
            </div>
            {% endfor %}
            {# <!-- Pagination -->
            <ul class="pagination justify-content-center mb-4">
                <li class="page-item">
                    <a class="page-link" href="#">&larr; Older</a>
                </li>
                <li class="page-item disabled">
                    <a class="page-link" href="#">Newer &rarr;</a>
                </li>
            </ul> #}
        </div>
        <!-- Sidebar Widgets Column -->
        <div class="col-md-4">
            <!-- Categories Widget -->
            <div class="card my-4 bg-darkness text-white">
                <h5 class="card-header">Categorie</h5>
                <div class="card-body bg-light">
                    <div class="row">
                        <div class="col-lg-6">
                            <ul class="list-unstyled mb-0">
                                {% for categ in categs|slice(0,4)  %}
                                <li>
                                    <a href="/category/{{categ.id}}" class="badge badge-primary">{{categ.name|capitalize}}</a>
                                </li>
                                {% endfor %}
                            </ul>
                        </div>
                        <div class="col-lg-6">
                            <ul class="list-unstyled mb-0">
                                {% for categ in categs|slice(5,10)  %}
                                <li>
                                    <a href="/category/{{categ.id}}" class="badge badge-primary">{{categ.name|capitalize}}</a>
                                </li>
                                {% endfor %}
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Side Widget -->
            <div class="card my-4 bg-darkness text-white">
                <h5 class="card-header">Tags</h5>
                <div class="card-body bg-light">
                    {% for tag in tags %}
                    <a href="/tag/{{tag.id}}" class="badge badge-danger">#{{tag.name}}</a>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
    <!-- /.row -->
</div>
<!-- /.container -->
{% endblock %}