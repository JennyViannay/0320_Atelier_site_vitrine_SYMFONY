{% extends 'base.html.twig' %}

{% block body %}
<!-- Page Content -->
<div class="container">
    <div class="row">
        <!-- Post Content Column -->
        <div class="col-lg-8">
            <!-- Title -->
            <h1 class="mt-4">{{article.title|capitalize}}</h1>
            <!-- Author -->
            <p class="lead">
                by
                <a href="/about">@me</a>
            </p>
            <hr>
            <!-- Date/Time -->
            <p>Posted on {{article.createdAt|date('d/m/Y')}}</p>
            <hr>
            <!-- Preview Image -->
            <img class="img-fluid rounded" src="{{article.picture}}" alt="{{article.picture}} image">
            <hr>
            <!-- Post Content -->
            <p class="lead">{{article.resume}}</p>

            <blockquote class="blockquote">
                <p class="mb-0">Lorem ipsum dolor sit amet, consectetur adipiscing elit. Integer posuere erat a ante.
                </p>
                <footer class="blockquote-footer">Someone famous in
                    <cite title="Source Title">Source Title</cite>
                </footer>
            </blockquote>

            <p>{{article.content}}</p>

            <hr>

            <!-- Comments Form -->
            <div class="card my-4 bg-darkness text-white">
                <h5 class="card-header">Leave a Comment:</h5>
                <div class="card-body bg-light">
                    <form method="POST" action="{{ path('send-comment') }}">
                        <input type="hidden" class="form-control" name="article_id" value={{article.id}}>
                        <div class="form-group">
                            <textarea class="form-control" rows="3" name="content" required></textarea>
                        </div>
                        <div class="form-group">
                            <input type="text" class="form-control" name="name" placeholder="name" required>
                        </div>
                        <button type="submit" class="btn btn-outline-danger">Submit</button>
                    </form>
                </div>
            </div>
            {% for comment in article.comments %}
            {% if comment.isValidated == true %}
            <!-- Single Comment -->
            <div class="media mb-4">
                <img class="d-flex mr-3 rounded-circle avatar" src="https://i1.sndcdn.com/avatars-000409376361-pbso33-t500x500.jpg" alt="avatar">
                <div class="media-body">
                    <h5 class="mt-0">@{{comment.name}}, write :</h5>
                    {{comment.content}}
                    <p class="font-italic">{{comment.createdAt|date('d/m/Y')}}</p>
                </div>
            </div>
            {% endif %}
            {% endfor %}
        </div>
        <!-- Sidebar Widgets Column -->
        <div class="col-md-4">
            <!-- Categories Widget -->
            <div class="card my-4 bg-darkness text-white">
                <h5 class="card-header">Categorie</h5>
                <div class="card-body bg-light">
                    <div class="row">
                        <div class="col-lg-6">
                            <ul class="list-unstyled mb-0">
                                <li>
                                    <a href="/category/{{article.category.id}}">{{article.category|capitalize}}</a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Side Widget -->
            <div class="card my-4 bg-darkness text-white">
                <h5 class="card-header">Tags</h5>
                <div class="card-body bg-light">
                    {% for tag in article.tags %}
                    <a href="/tag/{{tag.id}}">#{{tag.name}}</a> -
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
    <!-- /.row -->
</div>
<!-- /.container -->
{% endblock %}